h1{
  text-align: center;
  color:black;
  font-weight: 500,bolder;
  font-family: Merriweather, arial, serif;
}
#byline{
  text-align: center;
  font-family: Montserrat, arial, sans-serif;
  font-weight: 300, lighter;
  color:grey;
}
.container{
  font-family: Montserrat,arial, sans-serif;
  font-weight: 300;
  text-align: justify;
  font-size: 18px;
  margin:auto;
  padding-top: 1.5em;
  padding-bottom: 1.5em;
  color:black;
}

#image{
  width:90%;
  margin-left: auto;
  margin-right: auto;
  display:block;
}
#caption{
  color:grey;
  text-align: center;
}
/* Top hat*/
.nav-logo {
  color:#ffffff;
  margin:0 auto;
  font-weight:700;
  text-transform: uppercase;
}

#letter{
  color: orange !important;
  font-size: 50px !important;
font-weight: 600 !important;

}
/*scrolling marquee*/
.holder {
  padding:1em;
  overflow: hidden;
}
.news {
  animation : slide 10s linear infinite;
  font-family: 'Merriweather', arial, sans-serif;
  font-weight: bolder;
  color: red;
  font-size:2em;

}

@keyframes slide {
  0% {
    transform: translatex(0%)
  }

  100% {
    transform: translatex(100%)
  }
}
/*end of marquee*/
/*hero container*/
.hero-container{
  position:relative;
}

.hero-image{
  width:100%;
  height:50%;
  opacity:.8;
}
.overlay{
  position: absolute;
  width:100%;
  top:0;
}

.hero-hed{
  text-align: center;
  padding-top:100px;
  padding-bottom: 150px;
  margin:0 auto;
  font-size: 6em;
  font-family: 'Merriweather', sans-serif;
  color:orange;
  text-decoration: underline;
  letter-spacing:0.4em;
}

.hero-sub{
  text-align: right;
  color:black;
  font-family:'Montserrat', serif;
  font-size: 1.5em;
  font-weight: bold;
  padding-top:50px;
  padding-bottom: 20px;
  background-color: #FFD580;
  opacity:0.5;
}

.quote{
  font-family: 'Montserrat', Arial, sans-serif;
  color:orange;
  font-size: 2em;
  font-weight:700;
  text-align: left;
  padding: 15px 0 15px 0;
  border-top: 0.5px solid red;
  border-bottom: 0.5px solid red;
  margin:20px 0 20px 0;
}
.quote-attribution{
 font-style:italic;
 font-weight:400;
}
.subheads{
  color:red;
  font-weight: bold;
  font-size: 20px;
}
.source{
    font-size:12px;
    color:grey;
    font-style:italic;
}
a:link{
    color: orange;
}
a:visited {
    color: purple;
}
a:hover {
    color: red;
}


#footnote{
  text-align: center;
padding-top: 10px;
padding-bottom:10px;
font-style: italic;
font-size: 18px;
padding: 15px 0 15px 0;
border-top: 1px solid orange;
border-bottom: 1px solid orange;
}


@media(max-width:550px){
  p{

  }
  .hero-hed{
    font-size: 6em;
	padding-bottom: 150px;
  }
  .hero-sub{
	  position:fixed;
    font-size: 1.5em;
	padding-top:50px;
   padding-bottom:20px;
  }
}
.card{
background-color:orange;
}
.card-body{
	text-align:left;
	padding:10px;
}


#footer{
  background-color: black;
  color: white;
  text-align: center;
  padding-top: 1em;
  padding-bottom: 1em;

}
